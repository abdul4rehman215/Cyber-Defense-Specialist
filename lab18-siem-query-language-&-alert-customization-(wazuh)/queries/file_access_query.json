{
  "query": {
    "bool": {
      "must": [
        {
          "match": {
            "rule.groups": "syscheck"
          }
        },
        {
          "wildcard": {
            "syscheck.path.keyword": "*passwd*"
          }
        },
        {
          "range": {
            "@timestamp": {
              "gte": "now-1h"
            }
          }
        }
      ]
    }
  },
  "sort": [
    {
      "@timestamp": {
        "order": "desc"
      }
    }
  ]
}
